{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranches": ["main"],
    "enabledManagers": ["custom.regex","jsonata"],
    "customManagers": [
      {
        "customType": "jsonata",
        "fileFormat": "json",
        "fileMatch": ["^ports/gnustep-\\w*/vcpkg.json$"],
        "matchStrings": [
          "{\"currentValue\":version,\"depName\":$replace(homepage,\"https://github.com/\",\"\")}"
        ],
        "datasourceTemplate": "github-releases"
      }
    ],
    "packageRules": [
      {
        "matchDatasources": ["github-releases"],
        "matchDepNames": ["gnustep/**"],
        "versioning": "regex:^(Release |\\w*-|)(?<major>\\d+)[\\._](?<minor>\\d+)[\\._](?<patch>\\d+)$"
      }
    ]
}
