{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranches": ["main"],
    "enabledManagers": ["custom.regex"],
    "repositories": ["qmfrederik/vcpkg-gnustep"],
    "customManagers": [
      {
        "customType": "regex",
        "fileMatch": ["^ports/gnustep-base/vcpkg.json$"],
        "matchStrings": [
          "\"version\": \"?(?<currentValue>[0-9\\.]*)\""
        ],
        "autoReplaceStringTemplate": "\"version\": \"{{newMajor}}.{{newMinor}}.{{newPatch}}\"",
        "depNameTemplate": "gnustep/libs-base",
        "datasourceTemplate": "github-releases"
      }
    ],
    "packageRules": [
      {
        "matchDatasources": ["github-releases"],
        "matchDepNames": ["gnustep/libs-base"],
        "versioning": "regex:^(Release |base-|)(?<major>\\d+)[\\._](?<minor>\\d+)[\\._](?<patch>\\d+)$",
        "extractVersionTemplate": "^(Release |base-|)(?<version>\\d+[\\._]\\d+[\\._]\\d+[\\._])$"
      }
    ]
}
