{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranches": ["main"],
    "enabledManagers": ["custom.regex","jsonata"],
    "customManagers": [
      {
        "customType": "jsonata",
        "fileFormat": "json",
        "fileMatch": ["^ports/gnustep-base/vcpkg.json$"],
        "matchStrings": [
          "{\"currentValue\":version}"
        ],
        "depNameTemplate": "gnustep/libs-base",
        "datasourceTemplate": "github-releases"
      }
    ],
    "packageRules": [
      {
        "matchDatasources": ["github-releases"],
        "matchDepNames": ["gnustep/libs-base"],
        "versioning": "regex:^(Release |base-|)(?<major>\\d+)[\\._](?<minor>\\d+)[\\._](?<patch>\\d+)$"
      }
    ]
}
